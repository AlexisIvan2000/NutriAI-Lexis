generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  firstName     String?
  lastName      String?
  createdAt     DateTime @default(now())

  age           Int?
  currentWeight Float?
  targetWeight  Float?
  height        Float?
  gender        String?
  activity      String?
  dietType      String?
  allergies     String?
  goal          String?

  // NOUVEAU: Champ de relation inverse, doit Ãªtre optionnel (relation 1:1)
  nutritionStats  NutritionStats?
}

model NutritionStats {
  id        Int      @id @default(autoincrement())
  calories  Int
  carbs     Int
  protein   Int
  fat       Int
  createdAt DateTime @default(now())

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
}
